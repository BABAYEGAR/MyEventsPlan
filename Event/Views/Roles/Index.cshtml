@model IEnumerable<Event.Data.Objects.Entities.Role>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "Roles & Priviledges";
    ViewBag.TableSubHeader = "List of all Roles and their Priviledges";
    Layout = "../Shared/Layout/_LayoutTable.cshtml";
}
@section links{

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Home")">My Dashboard</a>
        </li>
    </ol>
}
@section add {
    @Html.ActionLink("Add Role", "Create", null, new {@class = "btn btn-primary  fa fa-plus pull-right"})
}
<div class="card-content table-responsive">
   <table class="table table-hover" id="grid">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new {id = item.RoleId}, new {@class = "btn btn-default btn-lg fa fa-folder-open"})
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>