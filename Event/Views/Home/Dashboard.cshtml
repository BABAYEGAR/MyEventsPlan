@using System.Xml.Linq
@using System.Xml.Serialization
@using Event.Data.Objects.Entities
@using MyEventPlan.Data.DataContext.DataContext
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var loggedinuser = Session["planmyleaveloggedinuser"] as AppUser;
    var dbEvent = new EventDataContext();
    var dbProspects = new ProspectDataContext();
    var role = Session["role"] as Role;
    var events = dbEvent.Event.Where(n => n.EventPlannerId == loggedinuser.EventPlannerId).ToList();
    var prospects = dbProspects.Prospects.Where(n => n.EventPlannerId == loggedinuser.EventPlannerId).ToList();
    foreach (var eventss in events)
     {
         var doc = XDocument.Load("C:\\Users\\PC\\Documents\\Visual Studio 2015\\Projects\\Event\\Event\\event.xml");
         var items = from i in doc.Descendants("event")
             select i;

         foreach (var item in items)
         {
             item.Element("id").Value = eventss.EventId.ToString();
             item.Element("name").Value = eventss.Name;
             item.Element("startdate").Value = eventss.StartDate.ToShortDateString();
             item.Element("enddate").Value = eventss.StartDate.ToShortDateString();
             item.Element("color").Value = eventss.Color;
         }
         doc.Save("C:\\Users\\PC\\Documents\\Visual Studio 2015\\Projects\\Event\\Event\\event.xml");
     }

}
@section css{
    <link href="~/Content/monthly.css" rel="stylesheet">

}
@if ((loggedinuser != null) && (role != null))
{
    <!--/.span3-->
    <div class="span9">
        <div class="content">
            <div class="btn-controls">
                <div class="btn-box-row row-fluid">
                    @if (role.ManageEvents)
                    {
                        <a href="@Url.Action("Index", "Events")" class="btn-box big span4">
                            <i class=" icon-book"></i><b>@events.Count</b>
                            <p class="text-muted">
                                Events
                            </p>
                        </a>
                    }
                    @if (role.ManageApplicationUser)
                    {
                        <a href="@Url.Action("Index", "AppUsers")" class="btn-box big span4">
                            <i class="icon-user"></i><b>15</b>
                            <p class="text-muted">
                                New Users
                            </p>
                        </a>
                    }
                    @if (role.ManageProspects)
                    {
                        <a href="@Url.Action("Index", "Prospects")" class="btn-box big span4">
                            <i class="icon-money"></i><b>@prospects.Count</b>
                            <p class="text-muted">
                                Prospects
                            </p>
                        </a>
                    }

                    <div>
                        <div class="btn-box-row row-fluid">
                            <div class="span8">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <a href="#" class="btn-box small span4">
                                            <i class="icon-envelope"></i><b>Messages</b>
                                        </a><a href="#" class="btn-box small span4">
                                            <i class="icon-group"></i><b>Clients</b>
                                        </a><a href="#" class="btn-box small span4">
