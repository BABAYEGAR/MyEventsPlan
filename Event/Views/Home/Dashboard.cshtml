            <!--/.span9-->

        </div>
    </div>
}
@section scripts{
    <script src="~/Scripts/monthly.js"></script>
    <script>
        $('#calendar')
            .monthly({
                mode: 'event',
                xmlUrl: '../../event.xml'
            });

    </script>
}