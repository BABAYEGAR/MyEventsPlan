                            if ($(this).val() == "0") {
                                $("#nav-quick-launch-tool-panel").prop("disabled", true);
                                $("#go-quick-launch-panel").prop("disabled", true);
                            } else
                                $("#nav-quick-launch-tool-panel").prop("disabled", false);
                        });
                });
            });
    </script>
