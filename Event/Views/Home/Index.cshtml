<!-- Feature Blog End -->
<div class="section-space80 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title mb60 text-center">
                    <h1>Find your perfect Event Vendor</h1>
                    <p>Browse and connect with the top-rated in every category with reviews and ratings </p>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("ListOfVendors", "Vendors", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            <div class="row">
                <div class="form-group col-md-4">
                    @Html.DropDownListFor(m => m.VendorServiceId, null, "Select Vendor Service", new {@class = "form-control",id = "category" })
                    @Html.ValidationMessageFor(model => model.VendorServiceId, "", new {@class = "text-danger"})
                </div>
                <div class="form-group col-md-4">
                    @Html.DropDownListFor(m => m.LocationId, null, "Select Vendor Location", new {@class = "form-control",id = "service"})
                    @Html.ValidationMessageFor(model => model.LocationId, "", new {@class = "text-danger"})
                </div>
                <div class="form-group col-md-4">
                    <input type="submit" value="Find Vendors" id="findvendors" class="btn btn-primary btn-md btn-block"/>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <a href="@Url.Action("ListOfVendors", "Vendors")" class="btn btn-default btn-md">View All Vendor</a>
        </div>
    </div>
</div>

<div class="section-space80">
    <!-- Real Weddings -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title mb60 text-center">
                    <h1>Be inspired by the Best Event Planners</h1>
                    <p>Browse and Connect with the best Event Planners to make your event a dream come true. </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in countedPlanners)
            {
                <div class="col-md-4">
                    <div class="real-wedding-block mb30">
                        <!-- real wedding block -->
                        <div class="real-wedding-img">
                            <a href="@Url.Action("EventPlannerDetails", "EventPlanners", new {id = item.EventPlannerId})">
                                @if (item.Logo != null)
                                {
                                    <img src="~/UploadedFiles/EventPlannerLogo/@item.Logo" alt="" class="img-responsive">
                                }
                                else
                                {
                                    <img src="~/Content/AppTheme/images/hall.png" class="img-responsive"/>
                                }
                            </a>
                        </div>
                        <div class="real-wedding-info well-box text-center">
                            <h2 class="real-wedding-title">
                                <a href="@Url.Action("EventPlannerDetails", "EventPlanners", new {id = item.EventPlannerId})" class="title">@item.Name</a>
                            </h2>
                        </div>
                    </div>
                    <!-- /.real wedding block -->
                </div>
            }

        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <a href="#" class="btn btn-default btn-md">View More Event Plannners</a>
            </div>
        </div>
    </div>
</div>
