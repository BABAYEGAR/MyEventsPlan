@section scripts{
    <script>
        $(window)
            .load(function() {
                    $("#category")
                        .change(function() {
                            if ($("#category").val() == "") {
                                $("#findvendors").prop("disabled", true);
                            } else
                                $("#findvendors").prop("disabled", false);
                        });
                    $("#service")
                        .change(function() {
                            if ($("#service").val() == "") {
                                $("#findvendors").prop("disabled", true);
                            } else
                                $("#findvendors").prop("disabled", false);
                        });
                });
         
    </script>
}