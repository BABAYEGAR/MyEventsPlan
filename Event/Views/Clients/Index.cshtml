@using Event.Data.Objects.Entities
@model IEnumerable<Client>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of clients for the event";
    Layout = "../Shared/_LayoutTable.cshtml";
    var client = new Client();
}
@section add {
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-xs icon-plus pull-right" data-toggle="modal" data-target="#myModal">
        Add Client
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Add a new client</h4>
                </div>
                <div class="modal-body">
                    @{
                        Html.RenderPartial("CreateClientModal",client);
                    }
                </div>
            </div>
        </div>

    </div>
}
<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobile)
                </th>

                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.ActionLink("Open", "Details", new { id = item.ClientId }, new { @class = "btn btn-lg btn-default icon-folder-open" })
                    </td>
                </tr>
            }

    </table>
</div>