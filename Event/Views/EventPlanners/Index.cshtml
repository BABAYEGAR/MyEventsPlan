@model IEnumerable<Event.Data.Objects.Entities.EventPlanner>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all Event Planners";
    Layout = "../Shared/Layout/_LayoutTable.cshtml";
}

@section links{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Home")">My Dashboard</a>
        </li>
    </ol>
}
<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th></th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new {id = item.EventPlannerId}, new {@class = "btn  btn-danger"})
                </td>
            </tr>
            </tbody>
        }

    </table>
</div>