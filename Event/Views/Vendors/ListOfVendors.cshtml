@model IEnumerable<Event.Data.Objects.Entities.Vendor>
@{
    ViewBag.Title = "List";
    ViewBag.Header = "List of all vendors";
    Layout = "../Shared/_LayoutVendors.cshtml";
}
<div class="module-option clearfix">
    <form>
        <div class="input-append pull-left">
            <input type="text" class="span3" placeholder="Filter by name...">
            <button type="submit" class="btn">
                <i class="icon-search"></i>
            </button>
        </div>
    </form>
    <div class="btn-group pull-right" data-toggle="buttons-radio">
        <button type="button" class="btn">
            All
        </button>
        <button type="button" class="btn">
            Male
        </button>
        <button type="button" class="btn">
            Female
        </button>
    </div>
</div>
<div class="module-body">
 

        @foreach (var item in Model)
        {
            <div class="row-fluid">

                @{ int index = Model.ToList().IndexOf(item); };
                @if (index % 2 == 1)
                {

                <div class="span6">
                    <div class="media user">
                        <a class="media-avatar pull-left" href="#">
                            <img src="~/UploadedFiles/vendorImage/@item.Image">
                        </a>
                        <div class="media-body">
                            <h3 class="media-title">
                                @item.BusinessName
                            </h3>
                            <p>
                                <small class="muted">@item.Location.Name</small>
                            </p>
                            <div class="media-option btn-group shaded-icon">
                                <button class="btn btn-small">
                                    <i class="icon-envelope"></i>
                                </button>
                                <button class="btn btn-small">
                                    <i class="icon-share-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                }
                @if (index % 2 == 0)
                {
                    <div class="span6">
                        <div class="media user">
                            <a class="media-avatar pull-left" href="#">
                                <img src="~/UploadedFiles/vendorImage/@item.Image">
                            </a>
                            <div class="media-body">
                                <h3 class="media-title">
                                    @item.BusinessName
                                </h3>
                                <p>
                                    <small class="muted">@item.Location.Name</small>
                                </p>
                                <div class="media-option btn-group shaded-icon">
                                    <button class="btn btn-small">
                                        <i class="icon-envelope"></i>
                                    </button>
                                    <button class="btn btn-small">
                                        <i class="icon-share-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        }



    <br/>
    <div class="pagination pagination-centered">
        <ul>
            <li>
                <a href="#">
                    <i class="icon-double-angle-left"></i>
                </a>
            </li>
            <li>
                <a href="#">1</a>
            </li>
            <li>
                <a href="#">2</a>
            </li>
            <li>
                <a href="#">3</a>
            </li>
            <li>
                <a href="#">
                    <i class="icon-double-angle-right"></i>
                </a>
            </li>
        </ul>
    </div>
</div>