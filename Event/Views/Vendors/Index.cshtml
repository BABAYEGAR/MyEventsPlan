@using Event.Data.Objects.Entities
@model IEnumerable<Vendor>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all event types";
    Layout = "../Shared/_LayoutTable.cshtml";
    var vendor = new Vendor();
    var events =
        Session["event"] as Event;
}
@section add {
    @Html.ActionLink("View List Of vendors", "ListOfVendors", new {}, new {@class = "btn  btn-primary pull-right"})

}

@section links{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Events")">My Events</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@if (events != null)
                     {
                         @Url.Action("Details", "Events", new {id = events.EventId})
                     }">
                Event Dashboard
            </a>
        </li>
    </ol>
}
<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorService.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorService.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.VendorId}, new {@class = "btn  btn-primary"})
                    @Html.ActionLink("Details", "Details", new {id = item.VendorId}, new {@class = "btn  btn-default"})
                    @Html.ActionLink("Delete", "Delete", new {id = item.VendorId}, new {@class = "btn  btn-danger"})
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>