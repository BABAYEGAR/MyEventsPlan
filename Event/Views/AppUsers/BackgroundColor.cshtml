@using MyEventPlan.Data.Service.Enum
@model Event.Data.Objects.Entities.AppUser
@{
    ViewBag.Title = "Color Change";
    ViewBag.Header = "Change NavBar and SideBar Color";
    Layout = "../Shared/_LayoutForm.cshtml";
}
@section css{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="~/Content/Color/spectrum.css" rel="stylesheet"/>
}
@using (Html.BeginForm("BackgroundColor", "AppUsers", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal row-fluid"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="control-group">
        @Html.LabelFor(model => model.NavigationColor, new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.NavigationColor, EnumHelper.GetSelectList(typeof(NavColor)), "select a user role", new {@class = "form-control select-dropdown"})
            @Html.ValidationMessageFor(model => model.NavigationColor, "", new {@class = "text-danger"})
        </div>

    </div>

    <div class="control-group">
        @Html.LabelFor(model => model.SideBarColor, new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.SideBarColor, EnumHelper.GetSelectList(typeof(SideColor)), "select a user role", new {@class = "form-control select-dropdown"})
            @Html.ValidationMessageFor(model => model.SideBarColor, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update Color" class="btn btn-default"/>
        </div>
    </div>
}
@section scripts
{
    <script src="~/Content/Color/spectrum.js"></script>
    <script type="text/javascript">

        $("#sideColor").spectrum();
        $("#navColor").spectrum();

    </script>
}