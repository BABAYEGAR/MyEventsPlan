@using Event.Data.Objects.Entities
@using MyEventPlan.Data.DataContext.DataContext
@model AppUser
@{
    ViewBag.Title = "View";
    ViewBag.Header = "View users";
    Layout = "../Shared/_LayoutForm.cshtml";
    var userDb = new AppUserDataContext();
    var role = Session["role"] as Role;
}
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.EventPlanner.Firstname)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.EventPlanner.Firstname)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Role.Name)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Role.Name)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Firstname)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Firstname)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Lastname)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Lastname)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Email)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Mobile)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Mobile)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Password)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Password)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.ProfileImage)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ProfileImage)
    </dd>

    @if ((role != null) && (role.Name == "Platform Administrator"))
    {
        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @(userDb.AppUsers.Find(Model.CreatedBy).Lastname + "" + userDb.AppUsers.Find(Model.CreatedBy).Firstname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateLastModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateLastModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastModifiedBy)
        </dt>

        <dd>
            @(userDb.AppUsers.Find(Model.LastModifiedBy).Firstname + " " + userDb.AppUsers.Find(Model.LastModifiedBy).Lastname)
        </dd>
    }

</dl>

<p>
    @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-default"})
    @Html.ActionLink("Enable User", "EnableUser", null, new {@class = "btn btn-success"})
    @Html.ActionLink("Disable User", "DisableUser", null, new {@class = "btn btn-danger"})
</p>