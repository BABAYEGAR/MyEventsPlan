@using Event.Data.Objects.Entities
@model IEnumerable<GuestList>
@{
    var events = Session["event"] as Event;
    ViewBag.Title = "List";
    ViewBag.TableHeader = "My GuestList";
    ViewBag.TableSubHeader = "List of all my Guest List";
    Layout = "../Shared/Layout/_LayoutTable.cshtml";
    var guestList = new GuestList();
}
@section links{

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Events")">My Events</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@if (events != null)
                     {
                         @Url.Action("Details", "Events", new {id = events.EventId})
                     }">
                Event Dashboard
            </a>
        </li>
    </ol>
}
@section add {
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary fa fa-plus  pull-right waves-effect waves-light" data-toggle="modal" data-target="#myModal">
        Add Guest List
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Add a guest list</h4>
                </div>
                <div class="modal-body">
                    @{
                        Html.RenderPartial("EventPlanning/CreateGuestListModal", guestList);
                    }
                </div>
            </div>
        </div>

    </div>
}
<div class="card-content table-responsive">
   <table class="table table-hover" id="grid">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new {id = item.GuestListId}, new {@class = "btn btn-default btn-lg fa fa-folder-open"})

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
@section scripts{
    <script type="text/javascript">
        $('#myModal')
            .on('shown.bs.modal',
                function() {
                    $('#myInput').focus();
                });
    </script>

}