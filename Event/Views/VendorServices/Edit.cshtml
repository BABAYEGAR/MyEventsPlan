@using MyEventPlan.Data.Service.Enum
@model Event.Data.Objects.Entities.VendorService
@{
    ViewBag.Title = "Edit";
    ViewBag.Header = "Edit a vendor service";
    Layout = "../Shared/_LayoutForm.cshtml";
}
@using (Html.BeginForm("Edit", "VendorServices", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal row-fluid"}))
{
    @Html.HiddenFor(m => m.VendorServiceId)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="control-group">
        @Html.LabelFor(model => model.ServiceName, new {@class = "control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.ServiceName, new {htmlAttributes = new {@class = "span8"}})
            @Html.ValidationMessageFor(model => model.ServiceName, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.Scale, new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.Scale, EnumHelper.GetSelectList(typeof(VendorScale)), "select the vendor scale", new {@class = "span8"})
            @Html.ValidationMessageFor(model => model.Scale, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Create" class="btn btn-default"/>
        </div>
    </div>
}