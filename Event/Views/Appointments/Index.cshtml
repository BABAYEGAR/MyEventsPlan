@model IEnumerable<Event.Data.Objects.Entities.Appointment>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all " + Model.FirstOrDefault()?.Event.Name + " appointments";
    Layout = "../Shared/_LayoutTable.cshtml";
    long eventId = ViewBag.eventId;
}
@section links{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Events")">My Events</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Details", "Events", new {id = eventId})">Event Dashboard</a>
        </li>
    </ol>
}
@section add {
    @Html.ActionLink("Add Appointment", "Create", new {eventId}, new {@class = "btn btn-primary btn-xs icon-plus pull-right"})
}
<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.StartDate.ToShortDateString()
                </td>
                <td>
                    @item.EndDate.ToShortDateString()
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new {id = item.AppointmentId}, new {@class = "btn btn-default btn-lg icon-folder-open"})

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>