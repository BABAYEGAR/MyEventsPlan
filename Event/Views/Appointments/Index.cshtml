@model IEnumerable<Event.Data.Objects.Entities.Appointment>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all " + Model.FirstOrDefault()?.Event.Name + " appointments";
    Layout = "../Shared/_LayoutTable.cshtml";
}
@section add {
    @Html.ActionLink("Add Appointment", "Create", null, new {@class = "btn btn-primary btn-xs icon-plus pull-right"})
}

<table class="datatable-1 table table-bordered table-striped display">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.StartDate.ToShortDateString()
            </td>
            <td>
                @item.EndDate.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("View", "Details", new {id = item.AppointmentId}, new {@class = "btn btn-xs btn-default icon-screenshot"})
                @Html.ActionLink("Remove", "Delete", new {id = item.AppointmentId}, new {@class = "btn btn-xs btn-danger icon-remove"})
            </td>
        </tr>
    }
    </tbody>
</table>