@using Event.Data.Objects.Entities
@{
    ViewBag.Title = "Package Invoice";
    ViewBag.Header = "Invoice for subscription";
    Layout = "../Shared/Layout/_LayoutForm.cshtml";

    var loggedinuser = Session["myeventplanloggedinuser"] as AppUser;
    var package = Session["package"] as EventPlannerPackage;
    var invoice = Session["invoice"] as SubscriptionInvoice;
}
<style>
    .invoice {
        background: #fff;
        margin-right: 10px;
        padding: 15px;
        position: relative;
    }

    .page-header {
        font-size: 22px;
        margin: 10px 0 20px 0;
        height: 0px;
    }
</style>

<section class="content content_content" style="margin: auto; width: 90%;">
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> MyEventsPlan.
                    <small class="pull-right">Date: @DateTime.Now</small>
                </h2>
            </div><!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>
                    </strong>
                </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>
                        @loggedinuser.DisplayName
                    </strong>
                    <br>
                    Phone:
                    @loggedinuser.Mobile <br>
                    Email:@loggedinuser.Email
                </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Invoice #007612</b><br>
                <br>
                <b>Order ID:</b> 4F3S8J<br>
                <b>Payment Due:</b> 2/22/2014<br>
                <b>Account:</b> 968-34567
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Qty</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Sub Total</th>
                    </tr>
                    </thead>
                    <tbody>

                    @if (package != null)
                    {
                        <tr>
                            <td>1</td>
                            <td>@package.PackageName</td>
                            <td>@package.Amount</td>
                            <td>@package.Amount</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-md-12">
                <p class="lead">Amount Due 2/22/2014</p>
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                        @if (package != null)
                        {
                            <tr>
                                <th>Total:</th>
                                <td> @package.Amount</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">
                <script src="https://js.paystack.co/v1/inline.js"></script>
                <a href="" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
                <button type="button" onclick="payWithPaystack()" class="btn btn-success pull-right"> <i class="fa fa-credit-card"></i> Make Payment</button>
                <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>
            </div>
        </div>
    </section>
</section>
<script>
    function payWithPaystack() {
        var handler = window.PaystackPop.setup({
            key: 'pk_test_d19305d69eba56904f42be1c7a8a1fa0259f0760',
            email: '@loggedinuser.Email',
            amount: @package.Amount,
            ref: "",
            metadata: {
                custom_fields: [
                    {
                        display_name: "Mobile Number",
                        variable_name: "mobile_number",
                        value: "+2348114675635"
                    }
                ]
            },
            callback: function(response) {
                ConfirmPayment();
                alert('success. transaction ref is ' + response.reference);
                @(Url.Action("Dashboard","Home"))
            },
            onClose: function() {
                alert('window closed');
            }
        });
        handler.openIframe();
    }

    function ConfirmPayment() {
        $.ajax({
            url: '@Url.Action("ConfirmPayment", "EventPlannerPackages")',
            type: 'GET',
            dataType: 'json',
            // we set cache: false because GET requests are often cached by browsers
            // IE is particularly aggressive in that respect
            cache: false
        });
    }

</script>