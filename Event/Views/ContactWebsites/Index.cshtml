@using Event.Data.Objects.Entities
@model IEnumerable<ContactWebsite>
@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "Contact website";
    ViewBag.TableSubHeader = "List of all Contact websites";
    Layout = "../Shared/Layout/_LayoutTable.cshtml";
    var contactWebsite = new ContactWebsite();
}
@section add {
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary  fa fa-plus pull-right" data-toggle="modal" data-target="#myModal">
        Add Website
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Add a new contact website</h4>
                </div>
                <div class="modal-body">
                    @{
                        Html.RenderPartial("EventPlanning/CreateContactWebsiteModal", contactWebsite);
                    }
                </div>
            </div>
        </div>

    </div>

}
@section links{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Contacts")">My Contacts</a>
        </li>
    </ol>
}
<div class="card-content table-responsive">
    <table class="table table-hover" id="grid">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new {id = item.ContactWebsiteId}, new {@class = "btn btn-lg btn-default fa fa-folder-open"})
                </td>
            </tr>
        }
        </tbody>
    </table></div>