@model Event.Data.Objects.Entities.StaffEventMapping
@{
    ViewBag.Title = "Unassign";
    ViewBag.Header = "Unassign vendor";
    Layout = "../Shared/_LayoutForm.cshtml";
    var userDb = new AppUserDataContext();
}
@section links{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Events")">My Events</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Details", "Events", new {id = Model.EventId})">Event Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "StaffEventMappings", new {id = Model.EventId})">Event Staff</a>
        </li>
    </ol>
}
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Event.Name)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Event.Name)
    </dd>

    <dt>
        @Html.DisplayName("Event Planner")
    </dt>

    <dd>
        @(Model.EventPlanner.Firstname + " " + Model.EventPlanner.Lastname)
    </dd>

    <dt>
        @Html.DisplayName("Staff")
    </dt>

    <dd>
        @(Model.Staff.Firstname + " " + Model.Staff.Firstname)
    </dd>

</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger"/>

    </div>
}