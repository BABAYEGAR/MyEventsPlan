@using Event.Data.Objects.Entities
@model IEnumerable<StaffEventMapping>
@{
    var events = Session["event"] as Event;
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all staff assigned to " + events?.Name + "!";
    Layout = "../Shared/_LayoutTable.cshtml";
    var mapping = new StaffEventMapping();
}
@section links{

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Events")">My Events</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@if (events != null)
                     {
                         @Url.Action("Details", "Events", new {id = events.EventId})
                     }">
                Event Dashboard
            </a>
        </li>
    </ol>
}
@section add {
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-xs icon-plus pull-right" data-toggle="modal" data-target="#myModal">
        Assign staff
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Assign staff to event</h4>
                </div>
                <div class="modal-body">
                    @{
                        Html.RenderPartial("AssignStaffToEvent", mapping);
                    }
                </div>
            </div>
        </div>

    </div>
}
<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.Name)
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Mobile")
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Name)
                </td>
                <td>
                    @(item.Staff.Firstname + " " + item.Staff.Lastname)
                </td>
                <td>
                    @item.Staff.Email
                </td>
                <td>
                    @item.Staff.Mobile
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new {id = item.StaffEventMappingId}, new {@class = "btn btn-default btn-lg icon-folder-open"})
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>