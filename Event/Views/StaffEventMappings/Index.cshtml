@using Event.Data.Objects.Entities
@model IEnumerable<StaffEventMapping>
@{
    var events = Model.FirstOrDefault();
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all staff assigned to " + events?.Event.Name + "!";
    Layout = "../Shared/_LayoutTable.cshtml";
    var mapping = new StaffEventMapping();
}
@section add {
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-xs icon-plus pull-right" data-toggle="modal" data-target="#myModal">
        Assign staff
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Assign staff to event</h4>
                </div>
                <div class="modal-body">
                    @{
                        Html.RenderPartial("AssignStaffToEvent", mapping);
                    }
                </div>
            </div>
        </div>

    </div>
}
<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.Firstname)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Staff.Firstname)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {id = item.StaffId}, new {@class = "btn btn-xs btn-default"})
                    @Html.ActionLink("Unassign", "Delete", new {id = item.StaffId}, new {@class = "btn btn-xs btn-danger"})
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>