@{
    ViewBag.Title = "View";
    Layout = "../Shared/Layout/_LayoutView.cshtml";
    ViewBag.TableHeader = " Vendor Package Item";
    ViewBag.TableSubHeader = "Details of Vendor Package Item";
}

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.VendorPackage.PackageName)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.VendorPackage.PackageName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.ItemName)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ItemName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Amount)
    </dt>

