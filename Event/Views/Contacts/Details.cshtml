@using Event.Data.Objects.Entities
@using MyEventPlan.Data.DataContext.DataContext
@model Contact
@{
    Layout = "../Shared/Layout/_LayoutView.cshtml";
    ViewBag.Title = "Details";
    ViewBag.TableHeader = Model.DisplayName + "Contact Card";
    ViewBag.TableSubHeader = "Details of Contact";
    var userDb = new AppUserDataContext();
    var role = Session["role"] as Role;
}
@section links{

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Home")">My Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Contacts")">Contacts</a>
        </li>
    </ol>
}
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Title)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Title)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Firstname)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Firstname)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Lastname)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Lastname)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Email)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Mobile)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Mobile)
    </dd>
</dl>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary fa fa-pencil" data-toggle="modal" data-target="#myModal">
    Edit Contact
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Edit contact</h4>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderPartial("EventPlanning/EditContactModal", Model);
                }
            </div>
        </div>
    </div>

</div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-danger fa fa-trash" data-toggle="modal" data-target="#myModal1">
    Delete
</button>

<!-- Modal -->
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel1">Delete contact</h4>
            </div>

            @using (Html.BeginForm("Delete", "Contacts", new {id = Model.ContactId}))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <p>
                        Are you sure you want to remove the contact?

                    </p>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Remove" class="btn btn-danger pull-right fa fa-trash"/>
                    <input type="button" data-dismiss="modal" value="Cancel" class="btn btn-default pull-left"/>
                </div>
            }
        </div>

    </div>
</div>