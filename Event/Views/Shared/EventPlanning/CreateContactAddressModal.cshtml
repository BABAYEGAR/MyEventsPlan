@using MyEventPlan.Data.DataContext.DataContext
@using MyEventPlan.Data.Service.Enum
@model Event.Data.Objects.Entities.ContactAddress
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
    long contactId = ViewBag.contactId;
}
@using (Html.BeginForm("Create", "ContactAddresses", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.Hidden("ContactId", contactId)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-select">
        @Html.DropDownListFor(m => m.Type, EnumHelper.GetSelectList(typeof(ContactAddressType)), "Select a type", new {@class = "", id = "selectFor"})
        @Html.ValidationMessageFor(model => model.Type, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Street1, new {htmlAttributes = new {placeholder = "Enter street 1"}})
        @Html.LabelFor(model => model.Street1)
        @Html.ValidationMessageFor(model => model.Street1, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Street2, new {htmlAttributes = new {placeholder = "Enter street 2"}})
        @Html.LabelFor(model => model.Street2)
        @Html.ValidationMessageFor(model => model.Street2, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.State, new {htmlAttributes = new {placeholder = "Enter state"}})
        @Html.LabelFor(model => model.State)
        @Html.ValidationMessageFor(model => model.State, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.PostalCode, new {htmlAttributes = new {placeholder = "Enter postal code"}})
        @Html.LabelFor(model => model.PostalCode)
        @Html.ValidationMessageFor(model => model.PostalCode, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Country, new {htmlAttributes = new {placeholder = "Enter country"}})
        @Html.LabelFor(model => model.Country)
        @Html.ValidationMessageFor(model => model.Country, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Address" class="btn btn-default"/>
        </div>
    </div>
}