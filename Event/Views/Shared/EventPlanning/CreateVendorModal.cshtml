@using MyEventPlan.Data.DataContext.DataContext
@model Event.Data.Objects.Entities.Vendor
@{
    var dbc = new EventDataContext();
       Layout = "../../Shared/Layout/_LayoutModal.cshtml";
    ViewBag.LocationId = new SelectList(dbc.Locations, "LocationId", "Name");
}
@using (Html.BeginForm("Create", "Vendors", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Name, new {htmlAttributes = new {placeholder = "Enter Vendor Full Name"}})
        @Html.LabelFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Address, new {htmlAttributes = new {placeholder = "Enter Vendor Address"}})
        @Html.LabelFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.LocationId, "Location", new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.LocationId, null, new {@class = "span8"})
            @Html.ValidationMessageFor(model => model.LocationId, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.VendorServiceId, "Vendor Service", new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.VendorServiceId, null, new {@class = "span8"})
            @Html.ValidationMessageFor(model => model.VendorServiceId, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {placeholder = "Enter Vendor Email Address"}})
        @Html.LabelFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
    </div>

    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Mobile, new {htmlAttributes = new {placeholder = "Enter Vendor Phone Number"}})
        @Html.LabelFor(model => model.Mobile)
        @Html.ValidationMessageFor(model => model.Mobile, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.AveragePrice, new {htmlAttributes = new {placeholder = "Enter Average Price"}})
        @Html.LabelFor(model => model.AveragePrice)
        @Html.ValidationMessageFor(model => model.AveragePrice, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Website, new {htmlAttributes = new {placeholder = "Enter Website Url"}})
        @Html.LabelFor(model => model.Website)
        @Html.ValidationMessageFor(model => model.Website, "", new {@class = "text-danger"})
    </div>
    <div id="password">
        <div class="mui-textfield mui-textfield--float-label">

            @Html.EditorFor(model => model.Password, new {htmlAttributes = new {id = "pass"}})
            @Html.LabelFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
        </div>
        <div class="mui-textfield mui-textfield--float-label">

            @Html.EditorFor(model => model.ConfirmPassword, new {htmlAttributes = new {id = "pass1"}})
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new {@class = "text-danger"})
        </div>
    </div>
   
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Vendor" class="btn btn-default"/>
        </div>
    </div>
}
@section scripts{
    <script>
        $("#pass").val('password');
        $("#pass1").val('password');
        $("#password").hide();

    </script>
}