@using MyEventPlan.Data.DataContext.DataContext
@model Event.Data.Objects.Entities.Vendor
@{
    var dbc = new EventDataContext();
       Layout = "../../Shared/Layout/_LayoutModal.cshtml";
    ViewBag.LocationId = new SelectList(dbc.Locations, "LocationId", "Name");
}
@using (Html.BeginForm("Create", "Vendors", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Name, new {htmlAttributes = new {placeholder = "Enter Vendor Full Name"}})
        @Html.LabelFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Address, new {htmlAttributes = new {placeholder = "Enter Vendor Address"}})
        @Html.LabelFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.LocationId, "Location", new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.LocationId, null, new {@class = "span8"})
            @Html.ValidationMessageFor(model => model.LocationId, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.VendorServiceId, "Vendor Service", new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(m => m.VendorServiceId, null, new {@class = "span8"})
            @Html.ValidationMessageFor(model => model.VendorServiceId, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {placeholder = "Enter Vendor Email Address"}})
        @Html.LabelFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
    </div>

    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Mobile, new {htmlAttributes = new {placeholder = "Enter Vendor Phone Number"}})
        @Html.LabelFor(model => model.Mobile)
        @Html.ValidationMessageFor(model => model.Mobile, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.BusinessName, new {htmlAttributes = new {placeholder = "Enter Vendor Business Name"}})
        @Html.LabelFor(model => model.BusinessName)
        @Html.ValidationMessageFor(model => model.BusinessName, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.BusinessContact, new {htmlAttributes = new {placeholder = "Enter Vendor Business Contact"}})
        @Html.LabelFor(model => model.BusinessContact)
        @Html.ValidationMessageFor(model => model.BusinessContact, "", new {@class = "text-danger"})
    </div>

    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Vendor" class="btn btn-default"/>
        </div>
    </div>
}