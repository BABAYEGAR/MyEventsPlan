@model Event.Data.Objects.Entities.Note
@{
       Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Edit", "Notes", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.NoteId)
    @Html.HiddenFor(m => m.EventId)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.Title, new {@class = "control-label"})

        @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "span8"}})
        @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.Content, new {@class = "control-label"})

        @Html.TextAreaFor(model => model.Content, new {htmlAttributes = new {@class = "span8"}})
        @Html.ValidationMessageFor(model => model.Content, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.ShowToClient, new {@class = "control-label"})

        @Html.EditorFor(model => model.ShowToClient, new {htmlAttributes = new {@class = "span8"}})
        @Html.ValidationMessageFor(model => model.ShowToClient, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update" class="btn btn-default"/>
        </div>
    </div>
}