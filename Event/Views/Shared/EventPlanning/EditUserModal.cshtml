@model Event.Data.Objects.Entities.AppUser
@{
       Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("UpdateProfile", "AppUsers", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AppUserId)
    @Html.HiddenFor(m => m.EventPlannerId)
    @Html.HiddenFor(m => m.ClientId)
    @Html.HiddenFor(m => m.VendorId)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.Password)
    @Html.HiddenFor(m => m.Status)
    @Html.HiddenFor(m => m.StaffId)
    @Html.HiddenFor(m => m.RoleId)
    @Html.HiddenFor(m => m.BackgroundColor)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.Firstname, new {@class = ""})

        @Html.EditorFor(model => model.Firstname, new {htmlAttributes = new {@class = "", placeholder = "Enter your first name"}})
        @Html.ValidationMessageFor(model => model.Firstname, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.Lastname, new {@class = ""})

        @Html.EditorFor(model => model.Lastname, new {htmlAttributes = new {@class = "", placeholder = "Enter your first name"}})
        @Html.ValidationMessageFor(model => model.Lastname, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.Email, new {@class = ""})

        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "", placeholder = "Enter your email address"}})
        @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.LabelFor(model => model.Mobile, new {@class = ""})

        @Html.EditorFor(model => model.Mobile, new {htmlAttributes = new {@class = "", placeholder = "Enter your mobile number"}})
        @Html.ValidationMessageFor(model => model.Mobile, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update" class="btn btn-default"/>
        </div>
    </div>
}