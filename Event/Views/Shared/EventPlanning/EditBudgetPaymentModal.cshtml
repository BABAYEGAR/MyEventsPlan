@model Event.Data.Objects.Entities.BudgetPayment
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@section css{
    <link href="~/Scripts/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}
@using (Html.BeginForm("Edit", "BudgetPayments", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.BudgetPaymentId)
    @Html.HiddenFor(m => m.BudgetId)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.AmountPaid, new {htmlAttributes = new {placeholder = "Enter Budget Item Name"}})
        @Html.LabelFor(model => model.AmountPaid)
        @Html.ValidationMessageFor(model => model.AmountPaid, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.DatePaid, new { htmlAttributes = new { @class = "span8 startDate", id = "datetimepicker5", placeholder = "Select the Date paid" } })
        @Html.LabelFor(model => model.DatePaid)
        @Html.ValidationMessageFor(model => model.DatePaid, "", new { @class = "text-danger" })
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update Payment" class="btn btn-default"/>
        </div>
    </div>
}
<script src="~/Content/Dashboard/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">

    // init datepicker for date
    $('.startDate').datepicker({ 'startDate': new Date() });
</script>