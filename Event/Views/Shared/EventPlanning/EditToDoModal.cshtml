@model Event.Data.Objects.Entities.ToDo
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@section css{
    <link href="~/Scripts/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}
@using (Html.BeginForm("Edit", "ToDoes", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.ToDoId)
    @Html.HiddenFor(m=>m.EventPlannerId)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Name, new {htmlAttributes = new {placeholder = "Enter the to-do name"}})
        @Html.LabelFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
    </div>
    <div class="form-control">
        @Html.DropDownListFor(m => m.EventId, null, "Select an event", new {@class = ""})
        @Html.ValidationMessageFor(model => model.EventId, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.DueDate, new {htmlAttributes = new { @class = "dueDate", placeholder = "Select Due Date"}})
        @Html.LabelFor(model => model.DueDate)
        @Html.ValidationMessageFor(model => model.DueDate, "", new {@class = "text-danger"})
    </div>
    <div class="mui-select">
        @Html.DropDownListFor(m => m.AppUserId, null, "To-Do For", new {@class = ""})
        @Html.ValidationMessageFor(model => model.AppUserId, "", new {@class = "text-danger"})
    </div>
    <div class="mui-select">
        @Html.DropDownListFor(m => m.ContactId, null, "Assign To-Do To", new {@class = ""})
        @Html.ValidationMessageFor(model => model.ContactId, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.TextAreaFor(model => model.Notes, new { placeholder = "Enter the Appointment Note" })

        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
    </div>
    <div class="form-control col-md-6">
        @Html.EditorFor(model => model.SetReminder, new {htmlAttributes = new {placeholder = ""}})
        @Html.LabelFor(model => model.SetReminder)
        @Html.ValidationMessageFor(model => model.SetReminder, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update To-Do" class="btn btn-default"/>
        </div>
    </div>
}
<script src="~/Content/Dashboard/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">

    // init datepicker for date
    $('.dueDate').datepicker({ 'startDate': @Model.DueDate });
</script>