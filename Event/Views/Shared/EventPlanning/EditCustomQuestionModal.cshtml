@model Event.Data.Objects.Entities.CustomQuestion
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Edit", "CustomQuestions", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.CustomQuestionId)
    @Html.HiddenFor(m=>m.GuestListId)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Question, new {htmlAttributes = new {placeholder = "Enter Meal Choice"}})
        @Html.LabelFor(model => model.Question)
        @Html.ValidationMessageFor(model => model.Question, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Answer, new {htmlAttributes = new {placeholder = "Enter Meal Choice"}})
        @Html.LabelFor(model => model.Answer)
        @Html.ValidationMessageFor(model => model.Answer, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update Question" class="btn btn-default"/>
        </div>
    </div>
}