@model Event.Data.Objects.Entities.Note

@{
    long eventId = ViewBag.eventId;
}
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Create", "Notes", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("EventId", eventId)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Title, new {htmlAttributes = new {placeholder = "Enter News Title"}})
        @Html.LabelFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.TextAreaFor(model => model.Content, new {htmlAttributes = new {placeholder = "Enter News Contact"}})
        @Html.LabelFor(model => model.Content)
        @Html.ValidationMessageFor(model => model.Content, "", new {@class = "text-danger"})
    </div>
    <div class="mui-checkbox mui-checkbox--float-label">

        @Html.EditorFor(model => model.ShowToClient, new {htmlAttributes = new {placeholder = "Show to client?"}})
        @Html.LabelFor(model => model.ShowToClient)
        @Html.ValidationMessageFor(model => model.ShowToClient, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Note" class="btn btn-default"/>
        </div>
    </div>
}