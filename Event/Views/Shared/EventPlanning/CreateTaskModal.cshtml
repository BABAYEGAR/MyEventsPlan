@model Event.Data.Objects.Entities.Task

@{
    ViewBag.Title = "Create";
    ViewBag.Header = "Add a new task";
       Layout = "../../Shared/Layout/_LayoutModal.cshtml";
    long eventId = ViewBag.eventId;
}
<link href="~/Scripts/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet"/>
@using (Html.BeginForm("Create", "Tasks", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal row-fluid"}))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("EventId", eventId)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Name, new {htmlAttributes = new {placeholder = "Enter Task Name"}})
        @Html.LabelFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.Description, new {htmlAttributes = new {placeholder = "Enter Task Description"}})
        @Html.LabelFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">

        @Html.EditorFor(model => model.DueDate, new {htmlAttributes = new {@class = "startDate", placeholder = "Select the Task Due Date"}})
        @Html.LabelFor(model => model.DueDate)
        @Html.ValidationMessageFor(model => model.DueDate, "", new {@class = "text-danger"})
    </div>
    <div class="mui-select">
        @Html.DropDownListFor(m => m.StaffId, (SelectList) ViewBag.StaffId, "Select a Staff", new {@class = ""})
        @Html.ValidationMessageFor(model => model.StaffId, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Task" class="btn btn-default"/>
        </div>
    </div>
}
<script src="~/Content/Dashboard/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">

    // init datepicker for date
    $('.startDate').datepicker({ 'startDate': new Date() });

</script>