@model Event.Data.Objects.Entities.VisionBoard
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Edit", "VisionBoards", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.VisionBoardId)
    @Html.HiddenFor(m=>m.DateCreated)
    @Html.HiddenFor(m=>m.CreatedBy)
    @Html.HiddenFor(m=>m.File)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Title, new {htmlAttributes = new {placeholder = "Enter title"}})
        @Html.LabelFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Description, new {htmlAttributes = new {placeholder = "Enter description"}})
        @Html.LabelFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.File, new {htmlAttributes = new {placeholder = "select image/doc", type = "file"}})
        @Html.LabelFor(model => model.File)
        @Html.ValidationMessageFor(model => model.File, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Board" class="btn btn-default"/>
        </div>
    </div>
}