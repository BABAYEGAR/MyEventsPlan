@model Event.Data.Objects.Entities.EventPlannerPackage
@{
    Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Edit", "EventPlannerPackages", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EventPlannerPackageId)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.PackageGrade)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.PackageName, new {htmlAttributes = new {placeholder = "Enter Item Name"}})
        @Html.LabelFor(model => model.PackageName)
        @Html.ValidationMessageFor(model => model.PackageName, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Description, new {htmlAttributes = new {placeholder = "Enter Description"}})
        @Html.LabelFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.MaximumEvents, new {htmlAttributes = new {placeholder = "Enter Number Maximum Events"}})
        @Html.LabelFor(model => model.MaximumEvents)
        @Html.ValidationMessageFor(model => model.MaximumEvents, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Amount, new {htmlAttributes = new {placeholder = "Enter the amount"}})
        @Html.LabelFor(model => model.Amount)
        @Html.ValidationMessageFor(model => model.Amount, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update Package" class="btn btn-default"/>
        </div>
    </div>
}