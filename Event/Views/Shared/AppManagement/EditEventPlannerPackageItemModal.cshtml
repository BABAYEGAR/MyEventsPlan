@using MyEventPlan.Data.DataContext.DataContext
@model Event.Data.Objects.Entities.EventPlannerPackageItem
@{
       Layout = "../../Shared/Layout/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Edit", "EventPlannerPackageItems", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.EventPlannerPackageId)
    @Html.HiddenFor(m=>m.EventPlannerPackageItemId)
    @Html.HiddenFor(m=>m.CreatedBy)
    @Html.HiddenFor(m=>m.DateCreated)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.ItemName, new {htmlAttributes = new {placeholder = "Enter Item Name"}})
        @Html.LabelFor(model => model.ItemName)
        @Html.ValidationMessageFor(model => model.ItemName, "", new {@class = "text-danger"})
    </div>
    <div class="mui-textfield mui-textfield--float-label">
        @Html.EditorFor(model => model.Amount, new {htmlAttributes = new {placeholder = "Enter the amount"}})
        @Html.LabelFor(model => model.Amount)
        @Html.ValidationMessageFor(model => model.Amount, "", new {@class = "text-danger"})
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Update Item" class="btn btn-default"/>
        </div>
    </div>
}