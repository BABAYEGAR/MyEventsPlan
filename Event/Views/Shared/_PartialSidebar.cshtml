                </a>
            </li>
            @if (role.ManageApplicationUser)
            {
                <li>
                    <a href="@Url.Action("Index", "AppUsers")"><i class="menu-icon icon-user"></i>Users </a>
                </li>
            }
            @if (role.ManageEvents)
            {
                <li>
                    <a href="@Url.Action("Index", "Events")"><i class="menu-icon icon-book"></i>My Events </a>
