@using MyEventPlan.Data.Service.Enum
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/MaterialDesign/assets/img/apple-icon.png"/>
    <link rel="icon" type="image/png" href="~/Content/MaterialDesign/assets/img/favicon.png"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>

    <title>@ViewBag.Title</title>

    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport"/>
    <meta name="viewport" content="width=device-width"/>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/MaterialDesign/assets/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Material Dashboard CSS -->
    <link href="~/Content/MaterialDesign/assets/css/material-dashboard.css" rel="stylesheet"/>


    <!-- Fonts and icons -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons" rel="stylesheet" type="text/css">
    <link href="~/Content/MaterialDesign/assets/css/CustomCss.css" rel="stylesheet" />
    @RenderSection("css", false)
</head>

<body>
    <!-- Modal -->
    <div class="modal fade" id="myModal4" tabindex="-1" role="dialog" aria-labelledby="myModalLabel4">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel4">System Log-Out</h4>
                </div>@using (Html.BeginForm("LogOff", "Account", FormMethod.Get))
                {
                    <div class="modal-body">

                        @Html.AntiForgeryToken()
                        <p>
                            Are you sure you want to log out of the system?
                        </p>

                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Log-Out" class="btn btn-danger pull-right fa fa-trash" />
                        <input type="button" data-dismiss="modal" value="Back To Work" class="btn btn-default pull-left" />
                    </div>
                }
            </div>
        </div>

    </div>

<div class="wrapper">

    @{ Html.RenderPartial("_PartialMaterialSideBar"); }

    <div class="main-panel">
        @{ Html.RenderPartial("_PartialMaterialNavBar"); }

        <div class="content">

            <div class="container-fluid">
                <div class="row">
                    @RenderSection("majorinfo", false)
                </div>
                <div class="row">

                    <div class="col-md-12">
                        @if (TempData["display"] != null)
                        {
                            if (TempData["notificationtype"].Equals(NotificationType.Success.ToString()))
                            {
                                <div class="alert alert-success alert-dismissable">
                                    @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                                </div>
                            }
                            else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                                </div>
                            }
                            else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
                            {
                                <div class="alert alert-info alert-dismissable">
                                    @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                                </div>
                            }
                        }

                        @RenderSection("add", false)
                        @RenderSection("links", false)
                        <div class="card">
                            @RenderBody()




                        </div>
                        @{ Html.RenderPartial("_PartialMaterialFooter"); }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>

<!-- Core JS Files -->
<script src="~/Content/MaterialDesign/assets/js/jquery-3.1.0.min.js" type="text/javascript"></script>
<script src="~/Content/MaterialDesign/assets/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/MaterialDesign/assets/js/material.min.js" type="text/javascript"></script>

<!-- Notifications Plugin -->
<script src="~/Content/MaterialDesign/assets/js/bootstrap-notify.js"></script>

<!-- Material Dashboard javascript methods -->
<script src="~/Content/MaterialDesign/assets/js/material-dashboard.js"></script>
@RenderSection("scripts", false)