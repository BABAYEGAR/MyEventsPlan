@using MyEventPlan.Data.Service.Enum
<!DOCTYPE html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link type="text/css" href="~/Content/Dashboard/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/Content/Dashboard/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/Content/Dashboard/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/Content/Dashboard/images/icons/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600"
          rel="stylesheet">
    @RenderSection("css", false)
    <style>
        .breadcrumb {
            background-color: #f5f5f5;
            border-radius: 4px;
            list-style: none;
            margin-bottom: 20px;
            padding: 8px 15px;
        }

        .breadcrumb > li { display: inline-block; }

        .breadcrumb > li + li:before {
            color: #ccc;
            content: "/\00a0";
            padding: 0 5px;
        }

        .breadcrumb > .active { color: #777; }
    </style>
</head>
<body>
@{ Html.RenderPartial("_PartialNavigation"); }
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="span3">
                @{ Html.RenderPartial("_PartialSidebar"); }
            </div>

            @RenderSection("add", false)

            <br/>
            <br/>

            <div class="span9">
                @if (TempData["display"] != null)
                {
                    if (TempData["notificationtype"].Equals(NotificationType.Success.ToString()))
                    {
                        <div class="alert alert-success alert-dismissable">
                            @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                        </div>
                    }
                    else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
                    {
                        <div class="alert alert-danger alert-dismissable">
                            @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                        </div>
                    }
                    else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
                    {
                        <div class="alert alert-info alert-dismissable">
                            @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                        </div>
                    }
                }

                <div class="content">
                    @RenderSection("links", false)
                    <div class="module">
                        <div class="module-head">
                            <h3>
                                @ViewBag.TableHeader

                            </h3>
                        </div>
                        <div class="module-body table">

                            @RenderBody()
                        </div>
                    </div>
                    <!--/.module-->
                </div>
                <!--/.content-->
            </div>
        </div>
    </div>
    <!--/.container-->
</div>
<!--/.wrapper-->
<div class="footer">
    <div class="container">
        <b class="copyright">@DateTime.Now.Year </b>All rights reserved.
    </div>
</div>
<script src="~/Content/Dashboard/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/scripts/flot/jquery.flot.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/scripts/flot/jquery.flot.resize.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/scripts/datatables/jquery.dataTables.js" type="text/javascript"></script>
<script src="~/Content/Dashboard/scripts/common.js" type="text/javascript"></script>
@RenderSection("scripts", false)
</body>