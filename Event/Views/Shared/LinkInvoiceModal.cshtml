@using Event.Data.Objects.Entities
@using MyEventPlan.Data.DataContext.DataContext
@model Invoice
@{
    var loggedinuser = Session["myeventplanloggedinuser"] as AppUser;
    var db = new InvoiceDataContext();
    ViewBag.EventId = new SelectList(db.Event.Where(n => n.EventPlannerId == loggedinuser.EventPlannerId),
        "EventId", "Name");
    Layout = "../Shared/_LayoutModal.cshtml";
}
@using (Html.BeginForm("LinkInvoiceToEvent", "Invoices", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.InvoiceId)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.EventPlannerId)
    @Html.HiddenFor(m => m.InvoiceName)
    @Html.HiddenFor(m => m.InvoiceNumber)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.ClientId)
    @Html.HiddenFor(m => m.DueDate)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="control-group">
        @Html.LabelFor(model => model.EventId, new {@class = "control-label"})
        <div class="controls">
            @Html.DropDownListFor(model => model.EventId, null, new {htmlAttributes = new {@class = "span8"}})
            @Html.ValidationMessageFor(model => model.EventId, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Link Invoice" class="btn btn-default"/>
        </div>
    </div>
}