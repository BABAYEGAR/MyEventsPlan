@model Event.Data.Objects.Entities.Note

@{
    long eventId = ViewBag.eventId;
}
@{
    Layout = "../Shared/_LayoutModal.cshtml";
}
@using (Html.BeginForm("Create", "Notes", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal row-fluid"}))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("EventId", eventId)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="control-group">
        @Html.LabelFor(model => model.Title, new {@class = "control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "span8"}})
            @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.Content, new {@class = "control-label"})
        <div class="controls">
            @Html.TextAreaFor(model => model.Content, new {htmlAttributes = new {@class = "span8"}})
            @Html.ValidationMessageFor(model => model.Content, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.ShowToClient, new {@class = "control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.ShowToClient, new {htmlAttributes = new {@class = "span8"}})
            @Html.ValidationMessageFor(model => model.ShowToClient, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="Add Note" class="btn btn-default"/>
        </div>
    </div>
}