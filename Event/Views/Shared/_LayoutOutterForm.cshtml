@using MyEventPlan.Data.Service.Enum
@{
    ViewBag.Nav = true;
}
<!DOCTYPE html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link type="text/css" href="~/Content/Dashboard/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/Content/Dashboard/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/Content/Dashboard/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/Content/Dashboard/images/icons/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600"
          rel="stylesheet">
    <link href="~/Content/FontAwesome/css/font-awesome.min.css" rel="stylesheet"/>
    @RenderSection("css", false)
    @{
        var individual = EventPlannerTypeEnum.Individual.ToString();
        var organization = EventPlannerTypeEnum.Organization.ToString();
    }
</head>
<body>
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                <i class="icon-reorder shaded"></i>
            </a>

            <a class="brand" href="@Url.Action("Index", "Home")">
                MyEventsPlan
            </a>

            <div class="nav-collapse collapse navbar-inverse-collapse">

                <ul class="nav pull-right">

                    <li class="nav-user dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Sign Up
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Register", "Vendors")">Become a Vendor</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("Create", "EventPlanners", new {type = individual})">Become an Event Planner (Individual)</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("Create", "EventPlanners", new {type = organization})">Become an Event Planner (Organization)</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.nav-collapse -->
        </div>
    </div><!-- /navbar-inner -->
</div><!-- /navbar -->

<div class="wrapper">
    <div class="container">
        <div class="row">

            <div class="span9">
                <div class="content">

                    <div class="module">
                        <div class="module-head">
                            <h3>@ViewBag.Header</h3>
                        </div>
                        <div class="module-body">

                            @if (TempData["display"] != null)
                            {
                                if (TempData["notificationtype"].Equals(NotificationType.Success.ToString()))
                                {
                                    <div class="alert alert-success alert-dismissable">@TempData["display"]</div>
                                }
                                else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
                                {
                                    <div class="alert alert-danger alert-dismissable">@TempData["display"]</div>
                                }
                                else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
                                {
                                    <div class="alert alert-info alert-dismissable">@TempData["display"]</div>
                                }
                            }

                            <br/>

                            @RenderBody()
                        </div>
                    </div>


                </div><!--/.content-->
            </div><!--/.span9-->
            <div class="span3">
            </div>
        </div>
    </div>
    <!--/.container-->
</div>
<!--/.wrapper-->
<div class="footer">
    <div class="container">
        <b class="copyright">@DateTime.Now.Year </b>All rights reserved.
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/Dashboard/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

</body>
@Scripts.Render("~/bundles/jqueryval")
@RenderSection("scripts", false)