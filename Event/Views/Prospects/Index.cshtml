@using MyEventPlan.Data.Service.Enum
@model IEnumerable<Event.Data.Objects.Entities.Prospect>

@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "List of all my propects";
    Layout = "../Shared/_LayoutTable.cshtml";
}
@section add {
    @Html.ActionLink("Add Prospect", "Create", null, new {@class = "btn btn-primary btn-xs icon-plus pull-right"})
}

<div class="table-responsive">
    <table class="datatable-1 table table-bordered table-striped display">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.StartDate.ToShortDateString()
                </td>
                <td>
                    @item.EndDate.ToShortDateString()
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new { id = item.ProspectId }, new { @class = "btn btn-default btn-lg icon-folder-open" })
                    @if (item.Status == ProspectStausEnum.Active.ToString())
                    {
                        @Html.ActionLink("Cancel", "CancelProspect", new {id = item.ProspectId}, new {@class = "btn btn-xs btn-warning"})
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>