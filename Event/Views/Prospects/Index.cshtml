@model IEnumerable<Event.Data.Objects.Entities.Prospect>

@{
    ViewBag.Title = "List";
    ViewBag.TableHeader = "My Prospects (Leads)";
    ViewBag.TableSubHeader = "List of all my Prospects";
    Layout = "../Shared/_LayoutTable.cshtml";
}
@section add {
    @Html.ActionLink("Add Prospect", "Create", null, new {@class = "btn btn-primary btn-xs icon-plus pull-right"})
}
@section links{

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Home")">My Dashboard</a>
        </li>
    </ol>
}
<div class="card-content table-responsive">
    <table class="table table-hover">
        <thead class="text-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.StartDate.ToShortDateString()
                </td>
                <td>
                    @item.EndDate.ToShortDateString()
                </td>
                <td>
                    @Html.ActionLink("Open", "Details", new {id = item.ProspectId}, new {@class = "btn btn-default btn-lg icon-folder-open"})

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>