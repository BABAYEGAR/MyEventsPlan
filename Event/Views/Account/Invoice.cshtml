@using Event.Data.Objects.Entities
@{
    ViewBag.Title = "Package Invoice";
    ViewBag.Header = "Invoice for subscription";
    Layout = "../Shared/_LayoutForm.cshtml";

    var loggedinuser = Session["myeventplanloggedinuser"] as AppUser;
    var package = Session["package"] as Package;
}
<style>
    .invoice {
        background: #fff;
        border: 1px solid #f4f4f4;
        margin: 10px 25px;
        padding: 20px;
        position: relative;
    }

    .page-header {
        font-size: 22px;
        margin: 10px 0 20px 0;
    }
</style>
<section class="content content_content" style="margin: auto; width: 70%;">
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> Trust point Co.
                    <small class="pull-right">Date: @DateTime.Now</small>
                </h2>
            </div><!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>
                    </strong>
                </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>
                        @loggedinuser.DisplayName
                    </strong>
                    <br>
                    Phone:
                    @loggedinuser.Mobile <br>
                    Email:@loggedinuser.Email
                </address>
            </div><!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Invoice #007612</b><br>
                <br>
                <b>Order ID:</b> 4F3S8J<br>
                <b>Payment Due:</b> 2/22/2014<br>
                <b>Account:</b> 968-34567
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Qty</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Sub Total</th>
                    </tr>
                    </thead>
                    <tbody>

@if (package != null)
{
    <tr>
        <td>1</td>
        <td>@package.PackageName</td>
        <td>@package.Amount</td>
        <td>@package.Amount</td>
    </tr>
}
                    </tbody>
                </table>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-md-12">
                <p class="lead">Amount Due 2/22/2014</p>
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
@if (package != null)
{

    <tr>
        <th>Total:</th>
        <td> @package.Amount</td>
    </tr>
}
                        </tbody>
                    </table>
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">
                <a href="" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
                <a href="@Url.Action("ConfirmPayment")" class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Make Payment</a>
                <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>
            </div>
        </div>
    </section>
</section>